# Server Configuration
PORT=5000
NODE_ENV=production

# Database (Railway lo configura automáticamente con DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Frontend URL (tu dominio de Vercel)
FRONTEND_URL=https://tu-frontend.vercel.app

# JWT Configuration
JWT_SECRET=tu_secret_key_muy_segura_y_larga_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=7d

# Rate Limiting (ajustar según necesidades)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT=50

# Para testing/beta: desactivar completamente el rate limit
# DISABLE_RATE_LIMIT=true

# CORS Origins adicionales (opcional)
# ADDITIONAL_ORIGINS=https://dominio1.com,https://dominio2.com
